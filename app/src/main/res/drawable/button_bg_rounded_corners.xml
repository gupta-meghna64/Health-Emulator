<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DEB887"/>
            <stroke android:color="#8A2BE2" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners
                android:bottomRightRadius="300dp"
                android:bottomLeftRadius="300dp"
                android:topRightRadius="300dp"
                android:topLeftRadius="300dp"/>
        </shape>
    </item>
</selector>